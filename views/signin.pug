extends layout

block content
  .container
    .clearfix
      form.form-signin(action='/signin', method='POST')
        h3.form-signin-heading Signin
        label.sr-only(for='email') Email address
        input(
          type='email', id='email', name='email', class='form-control', 
          placeholder='Email address', required, autofocus
        )
        label.sr-only(for='password') Password
        input(
          type='password', id='password', name='password', class='form-control', 
          placeholder='Password', required, autofocus
        )
        .checkbox
          label 
            input(type="checkbox", value="remember-me")
            |
            | Remember me
        button.btn.btn-primary.btn-block(type='submit') Signin
        a.btn.btn-dark.btn-block(href='/auth/facebook')
          i.fa.fa-facebook.fa-lg
          | &nbsp;
          | Signin with Facebook
        .container(style="margin-top:0.5em;")
          a#kakao-login-btn
          a(href='http://developers.kakao.com/logout')
          script(type='text/javascript').
            Kakao.init('3ddda16fd4d17ed98bd4ad7c2535ccfb');
            Kakao.Auth.createLoginButton({
            container: '#kakao-login-btn',
            success: function(authObj) {
            alert(JSON.stringify(authObj));
            },
            fail: function(err) {
            alert(JSON.stringify(err));
            }
            });

        div.sub 
          a(href='/users/new') Signup
          | 
          | /
          |
          a(href='/reset-password') Reset Password
      
